<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vyali.ambulance.LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >


        <EditText
            android:id="@+id/emailreg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="Email/Username"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/passwordreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/emailreg"
            android:hint="password"
            android:ems="10"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/pass2reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/passwordreg"
            android:hint="confirm password"
            android:ems="10"
            android:inputType="textPassword"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/pass2reg"
            android:layout_marginTop="16dp"
            android:text="Register"
            android:id="@+id/reg_button"
            android:textColor="#000"
            android:background="@color/colorPrimary"
            />



        <TextView
            android:id="@+id/msgr_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/reg_button"
            android:text="alredy resigterd"
            android:layout_marginTop="18dp"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toEndOf="@+id/msgr_text"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/reg_button"
            android:text="Login"
            android:layout_marginLeft="5dp"
            android:id="@+id/login_text"
            android:textColor="#c60606"
            android:textSize="20dp"



            />

    </RelativeLayout>

</RelativeLayout>
